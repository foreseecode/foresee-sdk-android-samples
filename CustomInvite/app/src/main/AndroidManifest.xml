<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.foresee.demo.custominvite" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".CustomApplication"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme.Base"
        android:icon="@mipmap/ic_launcher">
        <activity
            android:name="com.foresee.demo.custominvite.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/CustomTheme.Base.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".DefaultInviteActivity"
                  android:label="@string/title_activity_default_invite"
                  android:theme="@style/CustomTheme.Base">
        </activity>
        <activity
            android:name=".CustomInvite1Activity"
            android:label="@string/title_activity_custom_invite_1"
            android:theme="@style/CustomTheme.Base">
        </activity>
        <activity
            android:name=".CustomInvite2Activity"
            android:label="@string/title_activity_custom_invite_2"
            android:theme="@style/CustomTheme.Base">
        </activity>
    </application>

</manifest>