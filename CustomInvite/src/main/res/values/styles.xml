<?xml version="1.0" encoding="UTF-8" ?>
<resources>

	<style name="CustomTheme.Base" parent="Theme.AppCompat.Light">
		<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/verint_blue</item>
        <item name="android:textColor">@color/textColor</item>
	</style>

	<style name="CustomTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
		<!--<item name="android:textColor">@color/primary_text</item>-->
        <item name="colorAccent">@color/verint_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

	<style name="CustomTheme.Base.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

	<style name="CustomTheme.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="CustomTheme.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/verint_blue</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
